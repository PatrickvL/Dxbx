<project name="Dxbxkrnl.dll"
         basedir=".."
         default="compile" >


  <property name="src"       	value="${basedir}/src" />
  <property name="bin" 		value="${basedir}/bin" />
  <property name="dcu" 		value="${basedir}/dcu" />
  <property name="lib"       	value="${basedir}/Libraries" />
  <property name="directx9"     value="${lib}/DirectX9" />
  <property name="JclIncludes"  value="${lib}/Jcl" />	
	
  <target name="prepare" >
  </target>


  <target name="build" >
  </target>

  <target name="resources" depends="prepare" >
    <brcc file="${src}/Tools/PatternTrieBuilder/StoredTrie.rc" output="${src}/Tools/PatternTrieBuilder/StoredTrie.res" />
  </target>

  <target name="compile"  depends="prepare, resources, build">
    <dcc basedir="${src}" source="DxbxKrnl.dpr">
      <exeoutput path="${bin}" />
      <dcuoutput path="${dcu}" />
      <unitpath>
        <include name="${src}" />
        <include name="${directx9}" />
        <include name="${JclIncludes}" />
     </unitpath>
    </dcc>
  </target>




</project>